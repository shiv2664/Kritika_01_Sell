                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/CLabel"
                        android:layout_marginTop="10dp">

                        <androidx.cardview.widget.CardView
